    <form action="/delete" method="post">
      <div class="item">
        <p><%= newListItem[i].name %></p>
        <button type="checkbox" name="checkbox" value="<%= newListItem[i]._id %>" onClick="this.form.submit()" id="checkbox"></button>            
        <label for="checkbox"></label>
      </div>
    </form>
  <% } %>
  <div class="addTask">
  <form class="addNew" action="/" method="post">
    
      <input autofocus type="text" id="taskInput" name="addbtn" placeholder="new">
      <button id="b" class="add_btn" type="submit"><span id="s2">+</span></button>
   
  </form>
</div> 
</div>